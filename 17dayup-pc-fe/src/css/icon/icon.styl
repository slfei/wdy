
categoryIcon(name, w = 55px, h = 55px)

    .icon-category-{name}
        width w
        height h
        background 'url(/build/img/category-%s.png) no-repeat' % name
        //imerge i_blue
        /*background-position center*/
        background-size 100%
    .icon-category-1
        width 55px
    .category-item:hover .icon-category-{name}, .active .icon-category-{name}
        background 'url(/build/img/category-%s-hover.png) no-repeat' % name
        background-size 100%
//imerge i_white
.icon
    display inline-block
    vertical-align middle
