
@import "../../config.styl"
.wt-thumbnail
    &:hover
        text-decoration none
    .thumbnail
        padding 0
        border 0
        position relative
    .thumbnail:hover
        box-shadow 1px 2px 10px #ddd
    .coupon-sign
        position absolute
        top 10px
        right 0px
        padding-right 8px
        padding-left 8px
        font-size 14px
        height  24px
        line-height 24px
        border-top-left-radius 12px
        border-bottom-left-radius 12px
        display inline-block
        background #ff1818
        color #fff
    img
        width 100%
        height 160px !important
    .caption
        padding 9px
        .title
            position relative
            font-size $font_large
            font-weight bold
            height 1.5em
            .span1
                display block
                white-space nowrap
                text-overflow ellipsis
                overflow hidden
                a
                    &:hover
                        color #268fff
            .span2
                display none
                position absolute
                top 0
                left 0
                background #fff
                z-index 10
        .description
            position relative
            font-size 14px
            color #333
            line-height 24px
            width 100%
            word-break break-all
            word-wrap break-word
            height 46px
            overflow hidden
            margin 4px 0px 8px
            &.grey
                color #999
                font-size 14px
        .other
            height 14px
            font-size 12px
            margin 0px
            margin-bottom 14px
            .price
                font-size 16px
                color $color_red
            .original-price
                font-size 12px
                color #999
                text-decoration line-through
            .free
                font-size 16px
                color $color_primary
            .lecturer
                color #999
                margin-top 3px
                max-width 9em
                a
                    color #999
                    &:hover
                      text-decoration underline !important
