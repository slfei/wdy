@import '../../config.styl'
.header-active-organ
    border-bottom 4px solid $color_primary
    color $color_primary !important
body
   background #fff
.classify
    width 1180px
    margin 0 auto
    .classify_all
        font-size 16px
        display block
        padding 32px 0 29px 0
        color #666
        .icon
            margin 0 0 3px 10px
    .classify_other
        font-size 14px
        background #f5f5f5
        border-radius 4px
        height 60px
        line-height 60px
        .classify_title
            padding-left 34px
            font-weight 900
            float left
            text-align right
            color #333
        .classify_nav
            float left
            margin-left 20px
            color #666
            li
                text-align left
                float left
                a
                   &:hover
                       color #268fff
                .active
                    color #268fff
            li ~ li
                margin-left 50px
    .classify_sort
        margin-top 20px
        width 100%
        border 1px solid #DEDEDE
        border-radius 4px
        color #666
        font-size 14px
        ul
            padding-left 34px
            height 56px
            line-height 56px
            li
                float left
                &:hover
                    cursor pointer
                    color #268fff
                &:first-child
                    &:after
                        background none
            .classify_sortIcon
                position relative
                margin-left 42px
                &:hover
                    &:after
                        position absolute
                        content ''
                        background url("/build/img/icon/downactive.png") no-repeat
                        width 8px
                        height 13px
                        float right
                        background-size 100%
                        margin-top 22px
                &:after
                    position absolute
                    content ''
                    background url("/build/img/icon/down.png") no-repeat
                    width 8px
                    height 13px
                    float right
                    background-size 100%
                    margin-top 22px
            .classify_sortIcon ~ .classify_sortIcon
                margin-left 50px
            .active
                color #268fff
                &:after
                    position absolute
                    content ''
                    background url("/build/img/icon/downactive.png") no-repeat
                    width 8px
                    height 13px
                    float right
                    background-size 100%
                    margin-top 22px
    .classify_list
        margin-top 20px
        margin-left -3px
        ul
           overflow hidden
           padding-bottom 5px
           li
              width 285px
              float left
              height 263px
              border 1px solid #dedede
              margin-left 13px
              margin-top 20px
              &:nth-child(4n+1)
                  margin-left 3px
              &:hover
                  box-shadow 1px 2px 10px #ddd
                  border none
              .organ_img
                  height 80px
                  width 80px
                  overflow hidden
                  border-radius 50%
                  margin 20px auto 0 auto
                  img
                     width 100%
                     height 100%
              .organ_title
                  font-size 16px
                  color #333
                  height 21px
                  line-height 21px
                  display -webkit-box
                  padding 0 10px
                  overflow hidden
                  text-overflow ellipsis
                  -webkit-line-clamp 1
                  -webkit-box-orient: vertical
              .organ_main
                  height 19px
                  line-height 19px
                  font-size 14px
                  color #999
                  display -webkit-box
                  padding 0 10px
                  overflow hidden
                  text-overflow ellipsis
                  -webkit-line-clamp 1
                  -webkit-box-orient: vertical
              .organ_info
                  height 19px
                  line-height 19px
                  font-size 14px
                  color #3c3c3c
                  display -webkit-box
                  padding 0 10px
                  overflow hidden
                  text-overflow ellipsis
                  -webkit-line-clamp 1
                  -webkit-box-orient: vertical
              .organ_title,.organ_main,.organ_info
                  text-align center
                  margin-top 10px
              .organ_area
                  margin-top 15px
                  display flex
                  border-top 1px solid #ececec
                  div
                     flex 1
                     text-align center
                     .organ_label
                         font-size 12px
                         color #999
                         margin-top 10px
                         display block
                         width 100%
                         height 16px
                         line-height 16px
                     .organ_num
                         display block
                         margin-top 5px
                         font-size 12px
                         color #268fff
                         height 16px
                         line-height 16px
                  .organ_line
                      position relative
                      &:after
                          content ''
                          position absolute
                          height 26px
                          width 1px
                          background #dedede
                          right 0
                          top 12px
                      &:before
                          content ''
                          position absolute
                          height 26px
                          width 1px
                          background #dedede
                          left 0
                          top 12px
        .empty-state
            text-align center
            padding-top 75px
            p
               margin-top 30px
               margin-bottom 70px
    .section-pagination
        text-align center
        overflow hidden
