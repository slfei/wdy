@import '../../config.styl'
.w-user-center
    background #f5f5f5
    /*min-height $min_height_center*/
    .center-titleo
        position relative
        bottom -2px
        font-size 14px
        font-weight 600
        color #333
    .center-sidebar .side-list .center-active, .center-sidebar .side-list a:hover
        color #238FFF
        .ion-book-outline
            width 20px
            height 20px
            background url(/build/img/center/bookHover.png) no-repeat
            imerge center
            background-size 20px 20px
        .ion-paper-outline
            width 20px
            height 20px
            background url(/build/img/center/paperHover.png) no-repeat
            imerge center
            background-size 20px 20px
        .ion-pricetags-outline
            width 20px
            height 20px
            background url(/build/img/center/pricetagsHover.png) no-repeat
            imerge center
            background-size 20px 20px
        .ion-star-outline
            width 20px
            height 20px
            top 13px
            background url(/build/img/center/starHover.png) no-repeat
            imerge center
            background-size 20px 20px
        .ion-bell-outline
            width 20px
            height 20px
            background url(/build/img/center/bellHover.png) no-repeat
            imerge center
            background-size 20px 20px
        .ion-gear-outline
            width 20px
            height 20px
            background url(/build/img/center/gearHover.png) no-repeat
            imerge center
            background-size 20px 20px

    .border-active
        border-bottom 3px solid #238FFF
    .hide
        display none
    .no-style-btn
        color #999
        padding 6px 15px
    .center-sidebar
        width 1170px
        padding-top 20px
        margin 0px auto
        .user-info
            padding 30px 30px
            .user-avator
                position relative
                padding 0
                overflow hidden
                border-radius 50%
                font-size: 0;
                img
                    width 100px
                    height 100px
                    /*border-radius 50%*/
                    border 0
                span
                    position absolute
                    bottom 5px
                    left: 0;
                    /*left 24%*/
                    font-size $font_small
                    color #fff
                    width 100%
                    background rgba(0,0,0,.3)
                    text-align center
                    padding-top 4px
                    padding-bottom 4px
            .user-desc
                font-size 14px
                color #333
                margin-top 24px
                margin-left 20px
                .nickname
                    font-weight bold
                    margin-bottom 10px
            .teach-manage
                margin-top 40px
        .side-list
            width 152px
            font-size 15px
            margin-top 20px
            padding 15px 0px 15px 15px
            a
                position relative
                display inline-block
                color #999
                padding 15px 10px
                margin-left 20px
                i
                    position absolute
                    font-size 19px
                    top 15px
                    left -14px
                .ion-book-outline
                    width 20px
                    height 20px
                    background url(/build/img/center/book.png) no-repeat
                    imerge center
                    background-size 20px 20px
                .ion-paper-outline
                    width 20px
                    height 20px
                    background url(/build/img/center/paper.png) no-repeat
                    imerge center
                    background-size 20px 20px
                .ion-pricetags-outline
                    width 20px
                    height 20px
                    background url(/build/img/center/pricetags.png) no-repeat
                    imerge center
                    background-size 20px 20px
                .ion-star-outline
                    width 20px
                    height 20px
                    top 13px
                    background url(/build/img/center/star.png) no-repeat
                    imerge center
                    background-size 20px 20px
                .ion-bell-outline
                    width 20px
                    height 20px
                    background url(/build/img/center/bell.png) no-repeat
                    imerge center
                    background-size 20px 20px
                .ion-gear-outline
                    width 20px
                    height 20px
                    background url(/build/img/center/gear.png) no-repeat
                    imerge center
                    background-size 20px 20px
    .center-right-content
        width 996px 
        margin-top 20px  
        margin-left 20px
        margin-bottom 60px
        min-height 360px
