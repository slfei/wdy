@import '../../config.styl'

html, body, #content
    height 100%
    width 100%
    overflow hidden
body
    background #000
.topbar
    height 60px
    line-height 60px
    background #161616
    color #999
    font-size 16px
    z-index 10000
    position absolute
    left 0
    right 0

    .back
        font-size 30px
        margin 0 50px 0 24px
    .course-title
        display inline-block
        vertical-align middle
    .user-info
        position relative
    .user-center
        float right
        .ucenter-dropdown-menu
            position absolute
            display none
            top 100%
            right 0
            text-align center
            list-style none
            min-width 0
            background #fff
            border-radius 0
            z-index 1
            padding 0
            margin 0
        .ucenter-dropdown-menu li
            height 32px
            line-height 32px
            text-align left
            margin 0
            padding 0
            white-space nowrap
            &:hover
                background $color_primary
                a
                    color #fff
            a
                padding 3px 20px
                font-size 14px

        &:hover .ucenter-dropdown-menu
            display block
    .login-wrap
        margin-right 24px
        .login
        .register
            cursor pointer
        .padding
            padding 0 5px

    .notice
        position relative
        font-size 30px
        margin-left 30px
        &:hover
            color $color_primary
        .num
            position absolute
            min-width 16px
            height 16px
            padding 0 3px
            text-align center
            line-height 16px
            background $color_red
            color #fff
            font-size 12px
            top 8px
            right -8px
            border-radius 50%
            display none
    .avatar
        display inline-block
        font-size 24px
        margin 0 25px 0 0
        background #d6d6d6
        color #fff
        height 32px
        width 32px
        line-height 32px
        text-align center
        border-radius 50%
        img
            width 40px
            height 40px
            vertical-align middle
            border-radius 50%

    .m-r-60
        margin-right 56px

.side-panel-wrapper
    position: absolute
    top: 0
    bottom: 0
    right: 0
    width: 300px


    .course-catalog
        right: 300px

    .chat-room-wrapper
        background: #fff;
        bottom: 0;
        position: absolute;
        top: 60px;
        width: 100%;
        z-index: 100;    
        padding: 20px

        .chat-room-header
            border-bottom: 1px solid #ccc
            padding-bottom: 20px
            font-size: 18px


.course-catalog
    position absolute
    top 60px
    bottom 0px
    right 0
    color #fff
    font-size 14px
    z-index 1
    line-height 30px
    background #000

    .chapter-wrap
        background #1d1d1d
        height 100%
        width 300px
        left 0
        top 0
        margin-right: -300px
        overflow-y auto
        transition all .4s ease-in-out
        padding-top 20px
        &.expand
            margin-right: 0


    .catalog-btn
        position absolute
        top 50%
        left -55px
        margin-top -65px
        width 55px
        height 90px
        text-align center
        background $color_primary
        color #fff
        border-radius 4px 0 0 4px
        cursor pointer
    .chapter-list
        padding 0 8px 0 24px

    .chapter-item
        color #fff
        display: block
        cursor pointer
        padding-left 24px
        &.active
            color $color_primary

    .chat-room-wrapper
        position: absolute
        right: 0
        width: 300px
        z-index: 100
        top: 60px


.no-sign-tip
    position absolute
    top 0
    left 50%
    transform translateX(-50%)
    max-width 446px
    min-width 320px
    border-radius 4px
    background #fff
    display table
    font-size 16px
    line-height 20px
    padding 10px 10px 10px 20px
    z-index 2
    .pull-left
        max-width 260px
    .btn
        display inline-block
        text-align center
        width 100px
        height 40px
        line-height 40px
        background #268fff
        color #fff
        border-radius 4px
    .close-btn
        cursor pointer
        font-size 18px
        padding 3px 8px

.pay-tip,.not-start-tip,.main-tip
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    color #fff
    z-index 1
    display none
    text-align center
    .title
        font-size 30px
        font-weight bold
        margin-bottom 38px
    .course-name
        font-size 30px
        margin-bottom 38px
    .price
        font-size 24px
        color $color_red
        margin-bottom 38px
    .w-btn-primary
        display inline-block
        width 150px
        height 60px
        line-height 60px
        padding 0
        font-size 24px
        text-align center
        box-shadow 3px 3px 8px rgba(0,0,0,.3)

.vcp-error-tips
    display: none !important      

#player
    position absolute
    top 60px
    bottom 0
    width 100%
    .jw-controlbar
        height 60px
        font-size 16px
        position absolute
        z-index 200

    .jw-buffer
        background #999
    .jw-icon-barlogo-new
        display none
    .jw-option
        height 30px
        line-height 30px

    .jw-playrate-label
    .jw-hd-label
        background #333333
        color #999
        height 30px
        line-height 30px
        margin-top 0
        vertical-align middle
    .jw-progress
    .jw-icon-tooltip .jw-active-option
        background $color_primary
    .jw-button-color:hover
    .jw-toggle
        color $color_primary
    .jw-media
        width 100%
        height 100%

.icon-msg
    background: url("/build/img/play/message.png")
    display: inline-block
    width: 24px
    height: 20px

.icon-uc
    background: url("/build/img/play/uc.png")
    display: inline-block
    width: 18px
    height: 20px

.active
    .icon-msg
        background: url("/build/img/play/message-ac.png")
    .icon-uc
        background: url("/build/img/play/uc-ac.png")        

.icon-cate
    background: url("/build/img/play/cate.png")
    display: inline-block
    width: 30px
    height: 23px
    margin-top: 20px

.icon-play
    width: 14px
    height: 10px
    display: inline-block
    background: url("/build/img/play/0001.png")

.icon-live
    background: url("/build/img/play/0000.png")
    width: 14px
    height: 14px
    display: inline-block
    position: relative
    top 1px

.icon-replay
    width: 15px
    height: 12px
    display: inline-block
    background: url("/build/img/play/0002.png")    
    position: relative
    top: 1px

.rel-2
    position: relative
    top: -2px


// live stream

.live-player-wrapper
    position: absolute
    top: 60px
    bottom: 0
    left: 0
    right: 300px

.tab-header
    cursor: pointer

    &.active
        color #268fff

.live-player
    .vcp-timelabel
        display: none

    .vcp-timeline
        display: none        

.content-user-list
    position: absolute
    left: 0px
    right: 0px
    bottom: 0
    top: 65px       
    overflow: scroll  
    overflow-x: hidden
    padding: 0 20px


    .user-item
        height: 54px
        border-bottom: 1px solid #e5e5e5
        color #999

        &.is-owner
            color #ff9000
        
        .thumbnail
            display: inline-block
            width: 30px
            height: 30px
            position: relative
            top: 12px
            border-radius: 15px

   
.content-chat-list
    .chat-input-wrapper
        width: 260px
        height: 100px
        position: absolute
        bottom: 20px
        padding: 0

            
        .disabled-text
            display: none
            text-align: center
            height: 100%
            line-height: 100px
            color #999
            font-size 16px


        &.disabled
            background: #eee
            cursor: disabled

            .sent-btn
                display: none
            .chat-input
                display: none

            .disabled-text
                display: block               

        .chat-input
            resize: none
            width: 100%
            height: 100%
            border: 1px solid #ccc

    .message-item
        font-size: 14px
        border-bottom: 1px solid #e5e5e5
        font-size: 14px
        color #333
        padding: 20px 0

        .chat-user
            margin-bottom: 20px
            color #268fff    

    .is-owner
        .message-item
            .chat-user
                color #ff9000

    #video_sms_list
        position absolute
        top 65px
        bottom 120px
        left 0
        right 0
        padding: 0 20px
        overflow: scroll
        overflow-x: hidden

    .sent-btn
        cursor: pointer
        font-size: 14px
        background: #268fff    
        width: 50px
        height: 20px
        line-height: 20px
        color #fff
        text-align: center
        position absolute
        right: 10px
        bottom 10px

body .jq-toast-wrap
    z-index: 19999 !important

.locale-en .catalog-btn
    height 63px
    margin-top -52px
