@import '../../base.styl'
@import '../../layout/header_mobile.styl' 

body
  background #fff

.pay_err
    padding-top 60px
    .pay_errArea
        padding 0 20px
        .cont
            img
                height 130px
                margin 0 auto 15px
                display block
            .pay_errTitle
                text-align center
                color #ff1818
                font-size 16px
                font-weight bold
                padding-bottom 5px
            .pay_errInfo
                text-align center
                color #fa9532
                font-size 12px
        .btn_area
            overflow hidden
            padding-top 60px
            .btn_back,.btn_repeat
                border-radius 5px
                text-decoration none
                text-align center
                width calc(50% - 18px)
            .btn_back
                color #268fff
                border 1px solid #268fff
                line-height 43px
                float left
            .btn_repeat
                float right
                line-height 45px
                color #fff
                background #268fff
            .btn_width
                width 80%
                float none
                margin 0 auto
                display block
                
       
