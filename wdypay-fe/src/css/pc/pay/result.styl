@import '../../base.styl'
@import '../../layout/header_pc.styl'
@import '../../layout/footer_pc.styl'

.result_area
    width 1180px
    margin 28px auto 0 auto
    height 450px
    background #fff
    .err_title
        padding-top 100px
        position relative
        width 200px
        margin 0 auto
        overflow hidden
        text-align center
        .error
            height 50px
            font-size 42px
            color #ff1818
        .success
            height 50px
            font-size 42px
            color #00C801
        .text
            color #333
            font-size 28px
            vertical-align super
    .err_info
       font-size 20px
       color #333
       margin-top 20px
       text-align center
    .btn_area
        width 300px
        margin 0 auto
        overflow hidden
        padding-top 35px
        .btn_back,.btn_repeat
            border-radius 5px
            text-decoration none
            text-align center
            width calc(50% - 18px)
        .btn_back
            color #268fff
            border 1px solid #268fff
            line-height 43px
            float left
        .btn_repeat
            float right
            line-height 45px
            color #fff
            background #268fff
        .btn_width
            width 60%
            float none
            margin 0 auto
            display block
