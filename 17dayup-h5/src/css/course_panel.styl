    background: #fff
    padding: 12px


    .cp-hd
        line-height: 22px
        margin-bottom: 15px

        .main
            font-size: 15px
            color #222222
            font-weight: bold

        .more
            font-size: 12px
            color #797979

            .icon
                position: relative
                top: -2px


    .cp-focus
        .thumbnail
            width: 350px
            height 154px
            margin-bottom: 10px
            display: block

            img 
                display: block
                width: 100%
                height: 100%



    .x-swiper-container 
        .x-swiper-wrapper 
            .cover
                height: auto

                .thumbnail
                    width: 160px
                    height: 105px
                    margin-bottom: 10px

                .title
                    font-size: 14px
                    color #3c3c3c

                .price
                    font-size: 14px
                    color #FF1818    


                    .origin
                        color: #9B9B9B
                        