//课程详情start
.update-wrap.discovery_center
    //列表样式
    .discovery_scroll_area
        li
            margin:0 12px 
            a
                .discovery_list_img
                    padding-left:0;
                    margin-left:0;
    //筛选部分
    .discovery_filter
        .discovery_filter_area
            .discovery_filter_area_list
                .discovery_filter_area_list_item
                    &:nth-of-type(1)
                        -webkit-box-pack:start;
                    &:nth-of-type(2)
                        -webkit-box-pack:center;
                    &:nth-of-type(3)
                        -webkit-box-pack:end;
                    display:-webkit-box;
                    padding:0 20px;
                    span,.text_omit
                        float:inherit;
                        width:auto;
                        margin-right:5px;
                        margin-left:0;
                    i
                        display:block;
        .js-sort
            .cur
                color #268fff
        .discovery_filter_screen_area
            height 253px
            .area1
                padding-bottom 0;
    .discovery_scroll
        .discovery_scroll_area
            li
                a
                    .discovery_list_img
                        height:80px;
                    .discovery_list_info
                        height:80px;
                        .discovery_list_info_title
                            margin-bottom:2px
                            position relative;
                            top -2px 
                        .discovery_list_info_name
                            margin-bottom:1px 
//课程详情end    

