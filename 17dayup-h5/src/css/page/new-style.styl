//收藏start
.update-wrap.my-collection
    .collect-main
        .course_item
            position: relative;
            transform: translateZ(0);
            -webkit-transform: translateZ(0);
            padding 0;
            margin 0;
            border-bottom:0 none
            &:after
                content:" ";
                height:1px;
                background-color:#ececec;
                position:absolute;
                left:10px;
                right:10px;
                bottom:0px;
                z-index: 10
                
            .cont
                position: relative;
                background-color:#fff;
                z-index: 10;
                display:flex;
                padding 20px 10px;
                &.animated
                    -webkit-transition: -webkit-transform .2s ease-out;
                    transition: transform .2s ease-out;
                .course_img
                    width:133px;
                .course_desc
                    flex:1;
                    p
                        height: 40px;
                        overflow: hidden;
                        text-overflow: ellipsis;
                        display: -webkit-box;
                        -webkit-box-orient: vertical;
                        -webkit-line-clamp: 2;
                        font-size: 16px;
                        color: #3c3c3c;
                        line-height: 20px;
                    .price
                        margin-top:29px;
                        font-size:14px;
                        height:14px;
                        line-height:14px;
            .sl-opts
                display: -webkit-box;
                -webkit-box-pack: center;
                -webkit-box-align: center;
                position: absolute;
                top: 0;
                bottom:2px;
                right: 0;
                z-index: 0;
                background-color:#FF1818;
                background-image:url('/static/img/icon/delete.png');
                background-repeat:no-repeat;
                background-position:center;
                background-size:20px 29px;
                width: 60px
                
                
//收藏end
