@import "../components/loading.styl"

html,body
    height 100%

.wt-root
    height 100%
    background: #FFFFFF
    
// .footer
    //  display none

.discovery_center
    position absolute
    width 100%
    top 50px
    bottom 0px
    overflow hidden
    .discovery_scroll
        height 100%
        position relative
        overflow auto
        -webkit-overflow-scrolling touch
        .discovery_scroll_area
            // background #eceef3
            padding-bottom 50px
            min-height 100%
            li
                height 114px
                border-bottom 1px solid #ececec
                a
                    padding-top 15px
                    display flex
                    height 100%
                    .discovery_list_img
                        width 133px
                        height 84px
                        padding 0 10px
                        background  url(/static/img/icon/default.png) no-repeat
                        background-size 113px 80px
                        background-position 10px 0px
                        position relative
                        .coupon-sign
                            position absolute
                            top 6px
                            right 10px
                            padding-right 8px
                            padding-left 8px
                            font-size 12px
                            height  20px
                            line-height 20px
                            border-top-left-radius 10px
                            border-bottom-left-radius 10px
                            display inline-block
                            background red
                            color #fff
                        img
                            width 100%
                            height 100%
                    .discovery_list_info
                        height 84px
                        flex 1
                        padding-right 10px
                        .discovery_list_info_title
                            height 40px
                            overflow hidden
                            text-overflow ellipsis
                            display -webkit-box
                            -webkit-box-orient vertical
                            -webkit-line-clamp 2
                            font-size 16px
                            color #3c3c3c
                            line-height 20px
                        .discovery_list_info_name
                            height 20px
                            font-size 12px
                            color #999
                            line-height 20px
                        .discovery_list_info_free
                            color #268fff
                            height 20px
                            line-height 20px
                            font-size 14px
                        .discovery_list_info_price
                            height 20px
                            color #ff1818
                            font-size 14px
    .discovery_filter
        height 50px
        // background #eceef3
        position relative
        .discovery_filter_area
            height 100%
            .discovery_filter_area_list
                height 100%
                display flex
                border-bottom 1px solid #ececec;
                .discovery_filter_area_list_item          
                    height 100%
                    flex 1
                    text-align center
                    line-height 50px
                    font-size 14px
                    color #3c3c3c
                    .text_omit
                        margin-left 10px
                        display -webkit-box
                        float left
                        width 80px
                        height 50px
                        overflow hidden
                        text-overflow ellipsis
                        -webkit-box-orient vertical
                        -webkit-line-clamp 1
                    i
                        display inline-block
                        transform rotate(0deg)
                        transition transform .3s
        .discovery_filter_scort
            background #fff
            ul
                width 100%
                li
                    height 48px
                    line-height 48px
                    padding-left 27px
                    font-size 14px
                    color #3c3c3c
                    width 100%
        .discovery_filter_course
            background #fff
            .discovery_filter_course_area
                display flex
                height 439px
                .discovery_filter_course_left
                    width 93px
                    height 100%
                    overflow scroll
                    background #f5f5f5
                    li
                        font-size 14px
                        padding-left 27px
                        height 48px
                        line-height 48px
                .discovery_filter_course_center
                    width 140px
                    overflow scroll
                    height 100%
                    background #f8f8fa
                    li
                        font-size 14px
                        height 48px
                        line-height 48px
                        padding-left 16px
                .discovery_filter_right
                    flex 1
                    height 100%
                    overflow scroll
                    li
                        font-size 14px
                        height 48px
                        line-height 48px
                        padding-left 16px
        .discovery_filter_screen
            background #fff
            font-size 14px
            .discovery_filter_screen_area
                height 266px
                input
                    display block
                .area1,.area2
                    padding 15px 10px
                    ul
                        height 38px
                        width 100%
                        li
                            height 100%
                            line-height 38px
                            width 108px
                            text-align center
                            float left
                            border 1px solid #ececec
                            border-radius 5px
                        li ~ li
                            margin-left 14px
                    ul ~ ul
                        margin-top 10px
                .area2
                    height 150px
                    border-bottom 1px solid #ececec;
                    .area2_title
                        height 20px
                        display block
                        width 100%
                        margin-bottom 10px
                .area3
                    margin-top 5px
                    line-height 40px
                    font-size 14px
                    overflow hidden
                    padding 0px 10px
                    .btn1
                        width 58px
                        float left
                        color #9b9b9b
                    .btn2
                        border-radius 5px
                        text-align center
                        width 100px
                        height 40px
                        line-height 40px
                        float right
                        background #268fff
                        color #fff
                        

.discovery_position
    position absolute
    top 50px
    z-index 90
    display none
    width 100%

.mask
    position absolute
    width 100%
    background rgba(0,0,0,0.5)
    top 50.5px
    bottom 0
    display none
    z-index: 10
    &.min
        bottom 50px
.active
    display block !important

.select
    border 1px solid #268fff !important
    color #268fff

.open
    color #268fff !important
    i
        transform rotate(-180deg) !important

.active_left
    background #268fff
    color #fff

.active_center
    background #fff
    color #268fff
.active_right
    background #fff
    color #268fff
.js-search.icon-search
    margin-left: 12px    
