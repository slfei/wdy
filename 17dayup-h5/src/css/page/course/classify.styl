@import '../../config.styl'
$font_large = 16px
$font_normal = 14px
$font_small = 12px
$border-color = #ececec
.pull-left
    float left
.pull-right
    float right
.clearfix:before, .clearfix:after
    display table
    content " "
.clearfix:after
    clear both
.hide
    display none
.show
    display block
.list-unstyled {
    padding-left: 0;
    list-style: none;
}

.classify
    &
        font-size $font_normal
    .left
        position absolute
        top 50px
        left 0
        bottom 50px
        background #f5f5f5
        width 88px
        text-align center
        overflow-y: auto;
        z-index: 99
     
        li
            a
                display block
                height 47px
                line-height 47px
        .active
            background $color-primary
            color #fff
    .right
        margin-left 88px
        padding 12px
        width 76%
        // height 100%
        background #fff
        padding-bottom 30px
        .title
            margin-bottom 15px
            .text
                font-size $font_large
            .ico
                padding-left 6px
        .content
            a
                display inline-block
                border 1px solid $border-color
                border-radius 5px
                padding 3px 12px
                margin-right 3px
                margin-bottom  15px

.menu-container
    position: absolute
    top: 50px
    bottom: 50px
    overflow: hidden
