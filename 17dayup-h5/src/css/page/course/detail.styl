            justify-content: center
            align-items: center
            margin 19px 0 26px 0
        .home span
            display: inline-block;
            width: 15px;
            height: 15px;
            margin-right: 5px;
            background: #fff  url(/static/img/icon/home.png) no-repeat center;
            background-size:15px 15px;
        .collect span
            display: inline-block;
            width: 15px;
            height: 15px;
            margin-right: 5px;
            background: #fff  url(/static/img/course/collect.png) no-repeat center;
            background-size:15px 15px;
     
        .collect .active
            background: #fff url(/static/img/course/yellowstar.png) no-repeat center;
            background-size:15px 15px;
     
     
        .Share span
            display: inline-block;
            width: 15px;
            height: 15px;
            margin-right: 5px;
            background: #fff  url(/static/img/course/share.png) no-repeat center;
            background-size:15px 15px;
       


