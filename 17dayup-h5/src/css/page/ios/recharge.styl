body
    background #f5f5f5

.main
    .list
       overflow hidden
       li
           width 170px
           height 60px
           line-height 60px
           text-align center
           margin-left 12px
           background #ffffff
           margin-top 20px
           border-radius 4px
           float left
           img 
               width 20px
               height 20px
               vertical-align sub
        .active
            border 1px solid #268fff
            color #268fff
    .btn
        width 100%
        clear both
        margin-top 50px
        .btn_s
            margin 0 auto
            width 150px
            height 45px
            background #268fff
            line-height 45px
            text-align center
            color #fff
            font-size 18px
    .info
        margin-top 50px
        margin-bottom 20px
        padding 0 12px
        .title
            font-size 16px
        .text
            font-size 14px
            color #666
            .space
                display inline-block
                width 20px
            .feedback
                color #268fff
