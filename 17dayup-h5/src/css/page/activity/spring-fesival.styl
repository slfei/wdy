.foot
    //margin-top 25px
    //height 145px
    padding-top 75px
    padding-bottom 75px
    text-align center
    background #333333
    .logo
        display inline-block
        width 240px
        height 64px
        background url('/static/img/logo@2x.png') no-repeat
        background-size 100%
        margin-bottom 10px
    .text
        font-size 22px
        line-height 1.5em
        color #666
        a
            position relative
            padding-left: 20px
        a:before
            content  ''
            position absolute
            background url("/static/img/batb.png") no-repeat
            width 16px
            height 17px
            left 0px
            background-size 100%
            top 7px
.spring
    background #faecc5
    .single-row
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
    .section-head-bg
        background url('/static/img/activity/spring-festival/head-bg-app-2.jpg') no-repeat 0 -32px
        height 400px
        text-align center
        img
            display inline-block
            margin-top  190px
            width 120px
            border-radius 3px
    .section-discount
        margin 30px 30px 10px
        .discount-main
            padding 0 10px
            margin-bottom 20px
            float left
            width 50%
        .discount
            display flex
            align-items center
            justify-content: flex-start;
            height 111px
            background url('/static/img/activity/spring-festival/discount-bg.png') no-repeat
            color #fff
            .discount-money
                width 94px
                padding-left 7px
                font-style: italic;
                color #fcd670
                font-size: 0;
                .unit
                    font-size 20px
                .text
                    font-size 40px
            .discount-rule
                text-align center
                width 124px
                font-size 28px
                letter-spacing: 5px;
            .discount-action
                flex 1
                font-size 42px
                .discount-get
                    display block
                    height 111px
                    font-size 36px
                    color #f01b32
                    text-align: center;
                    letter-spacing: 8px;
                    line-height: 42px;
                    padding-top: 10px;
        .discount-100, .discount-200
            .discount-money
                padding-left 0
                .unit
                    font-size: 16px;
                .text
                    font-size 38px

        .active
            background url('/static/img/activity/spring-festival/discount-prevent.png') no-repeat
            .discount-money .unit,.discount-money  .text, .discount-rule,.discount-action .discount-get
                color #fff
            .discount-get
                pointer-events none

    .section-hot-course
        .title
            margin 0 12px
            background url('/static/img/activity/spring-festival/hot-title-bg.png') no-repeat
            height 66px
            line-height 62px
            color #fff
            .text
                font-size 24px
                padding-left: 18px;
                display inline-block
            .more
                color #fff
                font-size 22px
                margin-right 20px
                i
                    padding-left 8px

        .hot-top
            background url('/static/img/activity/spring-festival/hot-top-bg.png') no-repeat
            height 48px
            background-size 100%
        .hot-bottom
            background url('/static/img/activity/spring-festival/hot-bottom-bg.png') no-repeat
            height 48px
            background-size 100%
            //position: relative;
            //top: -20px;
            margin-bottom 20px
        .hot-left
            background url('/static/img/activity/spring-festival/hot-left-bg.png') no-repeat
            background-size  750px 100%
            padding 0 25px
    .course-20
          h3
              background url('/static/img/activity/spring-festival/20-title-bg.png') no-repeat
    .course-50
