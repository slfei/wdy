$font_huge = 28px
$font_large = 16px
$font_normal = 14px
$font_small = 12px
$color_primary = #268fff
$color_red = #ff1818
$color_darkgray = #333
$color_dimgray = #666
$color_gray = #999

.wt-thumbnail
    &:hover
        text-decoration none
    .thumbnail
        padding 0
        border 0
    .thumbnail:hover
        box-shadow 1px 2px 10px #ddd

    img
        width 100%
        height 160px !important
    .caption
        padding 9px
        .title
            position relative
            font-size $font_large
            font-weight bold
            height 1.5em
            .span1
                display block
                white-space nowrap
                text-overflow ellipsis
                overflow hidden
                a
                    &:hover
                        color #268fff
            .span2
                display none
                position absolute
                top 0
                left 0
                background #fff
                z-index 10
        .description
            position relative
            font-size 14px
            color #333
            line-height 24px
            width 100%
            word-break break-all
            word-wrap break-word
            height 46px
            overflow hidden
            margin 4px 0px 8px
            &.grey
                color #999
                font-size 14px
        .other
            height 14px
            font-size 12px
            margin 0px
            margin-bottom 14px
            .price
                font-size 16px
                color $color_red
            .nowprice
                font-size 12px
                color #999
                text-decoration line-through
            .free
                font-size 16px
                color $color_primary
            .lecturer
                color #999
                margin-top 3px
                a
                    color #999
                    &:hover
                      text-decoration underline !important

.common-style
    .wt-thumbnail
        img
           height 124px!important
        .title
            line-height 1em
            height 1.1em
            margin-bottom 20px
