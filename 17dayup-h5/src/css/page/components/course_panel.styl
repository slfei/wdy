.course-panel
    margin-top: 10px
    background: #fff
    padding: 12px


    .cp-hd
        line-height: 22px
        margin-bottom: 15px

        .main
            font-size: 15px
            color #333
            font-weight: bold

        .more
            font-size: 12px
            color #797979

            .icon
                position: relative
                top: -2px


    .cp-focus
        .thumbnail
            width: 350px
            height 154px
            margin-bottom: 10px
            display: block
            background  url(/static/img/icon/big-default.png)
            background-size 350px 154px

            img 
                display: block
                width: 100%
                height: 100%



    .x-swiper-container 
        .x-swiper-wrapper 
            .cover
                height: auto
                position relative
                .coupon-sign
                    position absolute
                    top 6px
                    right 0px
                    padding-right 8px
                    padding-left 8px
                    font-size 12px
                    height  20px
                    line-height 20px
                    border-top-left-radius 10px
                    border-bottom-left-radius 10px
                    display inline-block
                    background #ff1818
                    color #fff


                .thumbnail
                    width: 160px
                    height: 90px
                    margin-bottom: 10px

                .title
                    font-size: 14px
                    color #3c3c3c

                .price
                    font-size: 14px
                    color #FF1818    


                    .origin
                        color: #9B9B9B
                        