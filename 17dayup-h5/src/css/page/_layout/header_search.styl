.header-search
    position fixed
    background: #fff
    display none
    height 100%
    width 100%
    top 0
    z-index 999
    padding 7px 15px 0
    .search_area
        width 100%
        height 30px
        overflow hidden
        .search_tips
            float left
            width 300px
            height 30px
            background #f5f5f5
            position relative
            border-radius 5px
            overflow hidden
            .weui-search-bar__label
                line-height 26px
                font-size 12px
                .search_text, .weui-icon-search
                    font-size 12px
                    color #999
            input
                width 100%
                height 100%
                border none
                background-color #f5f5f5
                padding-left 10px
        .search_cancel
            float right
            border none
            background-color #fff
            height 30px
            line-height 30px
            font-size 14px
            color #3e3e3e
    .hot_search
        margin-top 20px
        .hot_title
            font-size 14px
            color #9b9b9b
            margin-bottom 13px
        .hot_search_list
            width 398px
            li
                float left
                font-size 14px
                color #4a4a4a
                height 28px
                border 1px solid #dedede
                border-radius 100px
                padding 0 15px
                text-align center
                line-height 27px
                margin 0 20px 15px 0
