@import "./header.styl"
body
    background-color #f5f5f5
    .comment_btn
        color: #268fff;
        font-size: 14px;
        width: 100%;
        height: 100%;
        display: block;
.comment-main
    .score
        padding 20px 17px 
        border-bottom 1px solid #dedede
        label
            font-size 16px
            color #333
        span
            i
                font-size 18px
                margin-left 15px
            .active
                color #F6C846
            .gray
                color #ccc
        .star_text
            color #999
            font-size 14px
            margin-left 15px
    .comment-text
        position relative
        padding 10px
        font-size 14px
        textarea
            color #444
            width 100%
            border 0 none
            resize none
            padding 10px 7px
        .com-lenth
            position absolute
            bottom 12px
            right 20px
            color #BABABA
            .red-length
                color #FF8181
        .score
            padding 5px 7px
            border-bottom 0 none
            min-height 190px
            label
                font-size 16px
                color #333
                float left
            span
                margin-left 84px
                display block
                word-wrap break-word
                font-size 16px
                line-height 26px
                color #999 

            
