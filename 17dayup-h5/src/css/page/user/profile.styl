@import "./header.styl"
body
    background-color:#f5f5f5;
.my-profile
    margin-bottom 100px
    .cell-li
        margin-bottom 12px
        li
            padding 17px 20px
            border-bottom 2px solid #f5f5f5
            span
                font-size 16px
                color #333
            .sex_select
                i
                    display inline-block
                    width 22px
                    height 22px
                    font-size 15px
                    line-height 23px
                    border-radius 100%
                    color #fff
                    text-align center
                i:first-child 
                    margin-right 10px
                .ion-female
                    transform rotate(30deg)
                    -ms-transform rotate(30deg)     
                    -moz-transform rotate(30deg)    
                    -webkit-transform rotate(30deg) 
                    -o-transform rotate(30deg)
                .ion-male
                    margin: 0 10px    

                .gray
                    background #ccc
                .active
                    background #8FDEFE !important
            .avator_desc
                margin-top 26px
            .avator_upload
                img
                    display block
                    width 66px
                    height 66px
                    border-radius 100%
            .label_desc
                font-size 14px
                margin-top 3px
                color #797979
                input
                    width 100%
                    color #797979
                    text-align right
                    border none
            .sign_desc
                width 78%
        li.first:first-child
            padding 5px 20px !important
        .industry_li
            position relative
            .industry_select
                position absolute
                top -150px
                right 40px
                border 1px solid #d2d2d2
                height 300px 
                overflow-y scroll
                font-size 13px
                box-shadow 0 2px 4px rgba(0,0,0,.12)
                color #666
                background #fff
                border-radius 5px
                text-align center
                .select_item
                    padding 10px 
                .select_item:hover
                    color #000
                    background #e2e2e2
                .select
                    background rgba(0, 150, 136, 0.89)
                    color #fff
