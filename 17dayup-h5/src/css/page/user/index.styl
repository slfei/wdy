// @import "./header.styl"
html,body
   height 100%
   overflow hidden

body
    background: #f5f5f5

.center_area
    position absolute
    width 100%
    top 50px
    bottom 50px
    overflow-y auto
    -webkit-overflow-scrolling touch
    .my-center
        margin-top 0
        padding-bottom 50px
        .user-profile
            display block
            padding 20px 10px 12px 20px
            margin-bottom 12px
            .user-img
                img
                    width 66px
                    height 66px
                    border-radius 100%
                    padding 0px
                    border 1px solid #f5f5f5
            .user-desc
                margin-left 15px
                margin-top 7px
                max-width 255px
                p
                    font-size 16px
                    color #333
                .user-label
                    font-size 12px
                    color #797979
                    margin-top 7px
                    width 100%
                    display block
                    word-break break-all
                    word-wrap break-word
        .my-cell
            font-size 16px
            color #333
            padding 0px 20px
            margin-bottom 12px
            .item
                display: block
                border-bottom: 1px solid #ececec

                .icon
                    position: relative
                    top: -2px

                &:last-child
                    border: none
                
                &>span
                    padding 20px 0px 10px
                .ion-ios-arrow-right
                    font-size 20px
                    color #ccc
                    span
                        padding-top 4px

        .login_out
            height 100px
            margin 35px 20px 60px
            text-align center
            a
                display inline-block
                width 100%
                padding-top 10px  
                padding-bottom 10px
                background #DEDEDE
                border-radius 5px
                font-size 16px
                color #FFFFFF
        .login_out_new
            margin 0
            height 50px
            line-height 50px
            a
                color #4A4A4A
                background-color #fff
                border-radius 0px
                padding 0
        
