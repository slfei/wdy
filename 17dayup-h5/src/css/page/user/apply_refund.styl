@import "./header.styl"
@import "../components/select_modal.styl"
body
    background-color #f5f5f5
.my-refund
    .refund-main
        .cell
            padding 20px 14px
            border-bottom 2px solid #f5f5f5
            font-size 14px
            .label
                color #333
            .red
                color #FF8181
                margin-left 20px
            .select
                color #999
        .refund_intro
            margin-top 13px
        .refund_textarea
            position relative
            textarea
                width 100%
                display block
                padding 0 0 25px
                resize none
                border 0 none
                min-height 168px
            .com-lenth
                position absolute
                bottom -2px
                right 0px
                color #BABABA
                left 0
                background-color #fff
                text-align right
                .red-length
                    color #FF8181
