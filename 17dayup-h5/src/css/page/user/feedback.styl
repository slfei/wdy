@import "./header.styl"
.feedback-main
    .problem_type
        padding 10px 12px
        margin-bottom 12px
        .title
            font-size 16px
            color #999
            padding 10px
        .select_type
            padding 10px
            a
                font-size 14px
                padding 9px 20px
                border 1px solid #DEDEDE
                color #999
                border-radius 5px
                margin-right 25px
            .active
                color #268FFF
                border-color #268FFF
          
        .feedback_text
            margin-top 5px
            textarea
                font-size 14px
                border none
                background #f5f5f5
                width 100%
                padding 20px
                color #444
 

.feedback_btn
    color #268fff
    font-size 14px
    width 100%
    height 100%
    display block
       

