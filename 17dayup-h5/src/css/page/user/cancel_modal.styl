.cancel-modal
    position fixed
    top 0%
    left 0%
    display none
    background rgba(0, 0, 0, 0.6)
    width 100%
    height 100%
    z-index 999
    text-align center
    .canscroll
        overflow-y scroll
        .modal-content
            position absolute
            left 50%
            top 40%
            border-radius 8px
            width 270px
            background-color #fff
            transform translate(-50%, -50%)
            overflow hidden
            h3
                font-size 16px
                color #333
                margin-top 20px
            .m-title
                padding 6px 0px 13px
                font-size 14px
                color #333
                letter-spacing 1px
                border-bottom 1px solid #dedede
            .cancel-btn
                a
                    display inline-flex
                    color #268FFF
                    font-size 16px
                    padding 10px 50px
                a:first-child
                    border-right 1px solid #dedede
