@import "./header.styl"
.refund_detail
    .cell
        padding 10px
        border-bottom 1px solid #f5f5f5
        .cell_head
            color #333
            font-size 14px
            padding 15px 10px
            border-bottom 1px solid #f5f5f5
        .record
            li
                padding 15px 10px 0
                color #797979
                font-size 12px
            
    .refund_process
        margin-top 12px
        .time-line
            margin 20px 10px
            border-left 1px solid #f5f5f5
            .time_item
                position relative
                padding-bottom 20px
                .refund_status
                    font-size 15px
                    b
                        position absolute
                        top 0px
                        left -12px
                        display inline-block
                        color #fff
                        width 23px
                        height 23px
                        line-height 23px
                        background #ccc
                        text-align center
                        border-radius 100%
                    span
                         margin-left 20px   
                         color #797979
                    .active
                        color #fff
                        background #F5A623
                    .is_active
                        color #333
                .refund_desc
                    font-size 12px
                    color #999
                    line-height 21px
                    margin-top 5px
                    margin-left 19px   

.my-refund
    margin-top 50px                    
