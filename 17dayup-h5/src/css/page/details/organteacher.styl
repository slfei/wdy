html,body,.wt-root
    height 100%
    overflow hidden
.scroll-down
    text-align center
    font-size 12px
    color #ccc
.no_comment
    background #fff
    text-align center
    padding 20px 0
    img
        width 100px
    span
        display block
        font-size 14px
        color #ccc
.content
    margin-top 50px
    .main_head
        height 163px
        background url('/static/img/details/person_bg.jpg')
        background-size 100%
        .user_img
            text-align center
            padding-top 15px
            height 65px
            img
                width 50px
                height 50px
                border-radius 50%
        .user_name
            text-align center
            font-size 16px
            color #fff
            margin-top 6px
        .user_info
            margin-top 2px
            height 15px
            line-height 15px
            text-align center
            font-size 12px
            color #fff
            img
               vertical-align sub
               height 15px
               width 15px
        .user_des
            padding-top 5px
            width 80%
            margin 0 auto
            text-align center
            font-size 12px
            color #d9d9d9
            height 40px
            overflow hidden
            display -webkit-box
            text-overflow ellipsis
            -webkit-line-clamp 2
            -webkit-box-orient vertical
    .tab
        height 44px
        width 100%
        ul
            height 44px
            display flex
            justify-content center
            align-items center
            li
                height 44px
                line-height 44px
                text-align center
                flex 1
                font-size 16px
        .line
            height 2px
            width 100%
            background-color #ececec
        .active
            position relative
            color #268fff
            &:after
                content ''
                position absolute
                width 70px
                height 2px
                background-color #268fff
                left 50%
                margin-left -35px
                bottom -2px
    .title
        padding-left 12px
        height 50px
        line-height 50px
        font-size 15px
        color #333333
        .more
            width 60px
            position relative
            display block
            float right
            font-size 12px
            color #797979
            &:after
                content ''
                margin-top 16px
                background url('/static/img/icon/arrow-right.png')
                height 18px
                width 18px
                position absolute
                background-size 100%
                right 12px
    .scroll_content
        position absolute
        top 258px
        bottom 0
        width 100%
        overflow scroll
        overflow-x hidden
        -webkit-overflow-scrolling touch
        .teacher_main
            margin-top 1px
            background-color #f5f5f5
            .teacher_info
                padding 0 12px 10px 12px
                background-color #fff
            .teacher_title
                padding-top 15px
                font-size 15px
                color #333
            .teacher_row
                 margin-top 10px
                 display flex
                 .main_title
                     font-size 12px
                     color #333
                     width 70px
                 .main_info
                     font-size 12px
                     color #2a2a2a
                     flex 1
            .course_area
                margin-top 10px
                background #fff
        .course_list
            padding 0 12px
            li
                height 110px
                a   
                    padding 15px 0
                    height 110px
                    display flex
                    .course_left
                        height 80px
                        width 120px
                        img
                            width 100%
                            height 100%
                    .course_right
                        position relative
                        flex 1
                        width 0
                        margin-left 15px
                        .course_name
                            font-size 16px
                            color #3c3c3c
                            overflow hidden
                            display -webkit-box
                            -webkit-box-orient vertical
                            -webkit-line-clamp 2
                            text-overflow ellipsis
                        .price_free
                            color #268fff
                        .nowprice
                            margin-left 14px
                            display inline-block
                            text-decoration line-through
                            color #cbcbcb
                            font-size 14px
                        .curprice
                            display inline-block
                            color #ff1818
                            font-size 14px
                        .price_area
                            position absolute
                            bottom 0
            li~li
                border-top 1px solid #ececec
        .comment_list
            background #f5f5f5
            .comment_info
                text-align center
                font-size 14px
                .comment_main
                    background #fff
                    height 60px
                    background-image url('/static/img/course/comment-bg.png')
                    background-repeat no-repeat
                    background-position center
                    .comment_title
                        margin-top 15px
                        height 17px
                        line-height 17px
                        display block
                        color #3c3c3c
                    .comment_num
                        margin-top 5px
                        height 22px
                        display block
                        color #ff1818
                        font-size 22px
                        line-height 22px
                .comment_tab
                    margin-top 10px
                    background #fff
                    ul
                        padding 10px 0
                        display flex
                        border-bottom 2px solid #f5f5f5
                        li
                           flex 1
                        .tab_title,.tab_num
                            display block
                            color #797979
                        .tab_title
                            font-size 12px
                        .tab_num
                            font-size 13px
                        .active
                            .tab_title,.tab_num
                                color #268fff
            .comment_area
                background #fff
                width 100%
                padding 15px 12px 0 12px
                display flex
                .comment_left
                    text-align center
                    width 40px
                    img
                        width 40px
                        height 40px
                        border-radius 50%
                        overflow hidden
                    .comment_name
                        display block
                        font-size 12px
                        color #797979
                        word-wrap break-word
                .comment_right
                    flex 1
                    margin-left 10px
                    width 0
                    word-wrap break-word
                    padding-bottom 15px
                    border-bottom 1px solid #dedede
                    .start
                        .ion-ios-star
                            color #dedede
                        .active
                            color #ffb040
                    .start_desc
                        font-size 14px
                        color #3c3c3c
                    .start_info
                        margin-top 5px
                        height 16px
                        line-height 16px
                        span
                            display inline-block
                            color #ccc
                            font-size 12px
                            a
                                width 114px
                                display inline-block
                                overflow hidden
                                text-overflow ellipsis
                                white-space nowrap
                                -webkit-line-clamp 1
                                vertical-align bottom
                        .start_data
                            padding-top 2px
                            float right
                            margin-right 40px
                                 
