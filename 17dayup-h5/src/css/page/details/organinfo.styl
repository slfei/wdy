html,body,.wt-root
    height 100%
    overflow hidden
.empty
    padding-top 40px
    text-align center
    img
        width 100px
    span
        font-size 14px
        color #ccc
        display block
.scroll-down
    text-align center
    font-size 12px
    color #ccc
.no_comment
    background #fff
    text-align center
    padding 20px 0
    img
        width 100px
    span
        display block
        font-size 14px
        color #ccc
.content
    margin-top 50px
    .main_head
        height 95px
        background url('/static/img/details/organ_bg.png')
        background-size 100%
        .user_img
            float left
            height 70px
            width 70px
            overflow hidden
            border-radius 50%
            margin 12px 0 0 15px
            img
                width 100%
                height 100%
        .user_info
            float left
            color #fff
            margin 18px 0 0 12px
            width 56%
            .user_name
                font-size 16px
                height 19px
            .user_desc
                margin-top 3px
                font-size 12px
                color #fffdfd
                height 16px
                overflow hidden
                text-overflow ellipsis
                -webkit-line-clamp 1
                white-space nowrap
            .user_comment
                margin-top 3px
                font-size 12px
                height 14px
                span
                     display inline-block
                .right
                    margin-left 25px
        .user_about
            float right
            height 30px
            width 30px
            margin 32px 18px 0 0
            a
                height 30px
                width 30px
                display block
                background url('/static/img/details/right_icon.png')
                background-size 100%
    .tab
        height 44px
        width 100%
        ul
            height 44px
            display flex
            justify-content center
            align-items center
            li
                height 44px
                line-height 44px
                text-align center
                flex 1
                font-size 16px
        .line
            height 2px
            width 100%
            background-color #ececec
        .active
            position relative
            color #268fff
            &:after
                content ''
                position absolute
                width 70px
                height 2px
                background-color #268fff
                left 50%
                margin-left -35px
                bottom -2px
    .banner
        margin-top 10px
        height 107px
        width 100%
        img
            height 107px
            width 100%
    .title
        padding-left 12px
        padding-top 10px
        height 35px
        line-height 35px
        font-size 15px
        color #333333
        .more
            width 60px
            position relative
            display block
            float right
            font-size 12px
            color #797979
            &:after
                content ''
                margin-top 8px
                background url('/static/img/icon/arrow-right.png')
                height 18px
                width 18px
                position absolute
                background-size 100%
                right 12px
    .line
        height 10px
        background #f5f5f5
    .scroll_content
        position absolute
        top 190px
        bottom 0
        width 100%
        overflow scroll
        -webkit-overflow-scrolling touch
        .teacher_area
            margin-top 15px
        .teacher_styl
            li
               margin-top 0 !important
               padding 15px 0 !important
            li ~ li
               border-top 1px solid #ececec
        .teacher_list
            padding 0 12px
            li
            height 50px
            a
                display flex
                .teacher_left
                    width 50px
                    height 50px
                    border-radius 50%
                    overflow hidden
                    img
                            width 100%
                            height 100%
                .teacher_right
                    flex 1
                    width 0
                    margin-left 10px
                    .teacher_name
                        margin-top 2px
                        height 19px
                        font-size 14px
                        color #3c3c3c
                    .teacher_desc
                        margin-top 10px
                        height 16px
                        color #999
                        font-size 12px
                        -webkit-line-clamp 1
                        overflow hidden
                        text-overflow ellipsis
                        white-space nowrap
            li~li
                margin-top 20px
            li:last-child
                padding-bottom 15px
        .course
            background-color #f5f5f5
        .course_area
            background #fff
        .course_area ~ .course_area
            margin-top 10px
        .course_list
            padding 0 12px
            li
                height 110px
                a   
                    padding 15px 0
                    height 110px
                    display flex
                    .course_left
                        height 80px
                        width 120px
                        img
                            width 100%
                            height 100%
                    .course_right
                        position relative
                        flex 1
                        width 0
                        margin-left 15px
                        .course_name
                            font-size 16px
                            color #3c3c3c
                            overflow hidden
                            display -webkit-box
                            -webkit-box-orient vertical
                            -webkit-line-clamp 2
                            text-overflow ellipsis
                        .price_free
                            color #268fff
                        .nowprice
                            margin-left 14px
                            display inline-block
                            text-decoration line-through
                            color #cbcbcb
                            font-size 14px
                        .curprice
                            display inline-block
                            color #ff1818
                            font-size 14px
                        .price_area
                            position absolute
                            bottom 0
            li~li
                border-top 1px solid #ececec
            
.swiper-wrapper
    height 107px
    .swiper-slide
        overflow: hidden
        background-color:#ccc
.swiper-pagination-bullet
    width 8px
    height 8px
    background: rgba(0,0,0,.3)
    margin-right: 6px
.swiper-pagination-bullet-active
    background: #fff
