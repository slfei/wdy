.about_area
    margin-top 50px
    background #f5f5f5
    .about_title
        background #fff
        padding 15px 12px
        font-size 15px
        color #333
    .about_info
        background #fff
        padding 0 12px
        word-wrap break-word
        font-size 14px
        color #333
    .time_line
        background #fff
        margin-top 10px
        .time_list
            padding 0 12px 0 32px
            li
                position relative
                padding-bottom 10px
                &:before
                    content ''
                    position absolute
                    background url('/static/img/details/time_line.jpg')
                    background-size 100%
                    width 11px
                    height 11px
                    top 50%
                    margin-top -11px
                    border-radius 50%
                    left -20px
                    z-index 9999
                &:after
                    content ''
                    position absolute
                    height 50%
                    top 0
                    left -15px
                    border-right 1px solid #ccc
                .time_des
                    padding 12px 12px
                    background #f5f5f5
                    word-break break-all
                    word-wrap break-word
            li:first-child
                &:after
                    height 50%
                    top 50%
                    border-right 1px solid #ccc
            li:last-child
                &:before
                    content ''
                    background url('/static/img/details/time_end.jpg')
                    background-size 100%
        .bdnone
            li:after
                content ''
                position absolute
                height 50%
                top 0
                left -15px
                border-right none !important
            li:first-child
            &:after
                height 50%
                top 50%
                border-right none !important
