@import "../../config.styl"
@import "../components/course_panel.styl"
body
    background #f5f5f5
.wt-root
    background: #F5F5F5



.navbar
    .weui-search-bar__form
        margin-right 9px
        .weui-search-bar__label
            top 0;
            bottom 0
.main-area
    background: #fff
    border-bottom: 1px solid transparent

.swiper-wrapper
    height: 144px

    .swiper-slide
        overflow: hidden
        background-color:#ccc

    img
        height: 100%
        margin-left: 50%
        transform: translateX(-50%)



.price-free
    color: #256fff

.swiper-pagination-bullet
    width 8px
    height 8px
    background: rgba(0,0,0,.3)
    margin-right: 6px

.swiper-pagination-bullet-active
    background: #fff

.hot-free-course
    padding: 15px 12px

    .title
        font-size: 15px
        color: $color-text-primary
        line-height: 16px;
        height: 16px;
        font-weight bold
    .title-sep
        color: $color-primary
        font-weight: bold

    .sub-swiper
        background: red
        height: 100px
        white-space: nowrap;


.x-swiper-container
    overflow-x: hidden
    position: relative

    .x-swiper-wrapper
        white-space: nowrap;
        display: inline-block
        // font-size: 0

        .cover
            display: inline-block
            width: 160px
            height: 90px
            margin-right: 5px
            position: relative
            .coupon-sign
                position absolute
                top 6px
                right 0px
                padding-right 8px
                padding-left 8px
                font-size 12px
                height  20px
                line-height 20px
                border-top-left-radius 10px
                border-bottom-left-radius 10px
                display inline-block
                background red
                color #fff

            img
                height: 100%
                width: 100%
                display: block


.main-area
    .x-swiper-container
        margin: 15px 0 5px;

        .x-swiper-wrapper
            .cover
                border-radius: 3px
                overflow: hidden

            .title
                position: absolute
                bottom: 0
                font-size: 12px
                color #fff
                background: rgba(0,0,0,.4)
                width: 100%
                height 25px
                line-height: 25px
                padding: 0 12px;

            .icon-play
                position: absolute
                left: 50%
                top: 23px
                margin-left: -17px
    .x-swiper-indicator
        text-align: center
        font-size: 0
        i
            display: inline-block
            width: 7px
            height: 7px
            border-radius: 50%
            background: #EFEDED
            margin: 0 2px
            vertical-align: middle;
            &.active
                border-radius: 4px
                height: 5px
                width: 14px
.img_cover
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background rgba(0,0,0,0.3)
                
