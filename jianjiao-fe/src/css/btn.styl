@import "_config.styl"

.btn
    display inline-block
    font-size 24px
    padding 0 35px
    height 56px
    line-height 56px
    color #333
    background #fff
    border-radius 30px
    border none
    text-align center


    &.btn-default
        border 2px solid #999


    &.btn-success
        border 2px solid $primary
        color $primary



    &.btn-plain
        border-radius 0

    &.btn-primary
        color #fff
        background $primary

    &.btn-block
        display block

    &.btn-large
        height 90px
        line-height 90px
        font-size 32px
        border-radius 45px
        
    &.btn-middle
        width 190px
        height 70px
        line-height 75px
        font-size 30px
        border-radius 40px

    &.btn-disabled
        color #fff
        background #ccc
        cursor not-allowed
    &.btn-test
        background #FFC14A
        padding-top 15px
        padding-bottom 15px
