.filter-wrap
    position relative
    width 100%
    height 99px
    text-align center
    font-size 28px
    border-bottom 1px solid #ccc

    .arrow
        position absolute
        top -12px
        border-bottom 12px solid #ccc
        border-left 12px solid transparent
        border-right 12px solid transparent
        left 16.66667%
        margin-left -12px
        &.center
            left 50%
        &.right
            left 83.333333%
        &::after
            content ""
            position  absolute
            top 2px
            left -12px
            border-bottom 11px solid #fff
            border-left 12px solid transparent
            border-right 12px solid transparent


    .filter-list
        position relative
        display flex
        width 100%
        height 100%
        z-index 100
        background #fff

    .filter-item
        box-sizing border-box
        flex 1
        border-right 1px solid #ccc
        text-align center
        height 45px
        line-height 45px
        margin-top 23px
        &.open
            color #E9314A
            i
                display inline-block
                transform rotate3d(0,0,1,-180deg)
                transform-origin: center
                transition transform transitionTime ease-in-out

    .filter-modal
        position absolute
        background #fff
        width 100%
        z-index 100
        top 99px
        .filter-content
            max-height 10rem
            overflow hidden
            display flex
            border-top 1px solid #ccc
        aside
            width 250px
            font-size 28px
            background #f0f0f0
            margin-right 43px

        .aside-item
            height 97px
            line-height 97px
            &.active
                background #fff
                color #E9314A
        .main
            flex 1
            margin-bottom 30px
        .main-item
            font-size 28px
            line-height 94px
            border-bottom 1px solid #ccc
            text-align left
            &.active
                color #E9314A
            &.t-center
                text-align center
    .has-sub
        margin-bottom 30px
    .level-2-node
        border-bottom 1px solid #999
    .active .level-2-node
        border-color #e9314a
    .level-3-node
        color #333
        float left
        width 50%
        text-align center
        box-sizing border-box
        line-height 36px
        font-size 24px
        margin 15px 0
        &:nth-child(2n+1)
            border-right 1px solid #ccc
        &.active
            color #E9314A
.modal-overlay
    position fixed
    z-index 99
    top 0
    bottom 0
    width 100%
    background rgba(0,0,0,.5)